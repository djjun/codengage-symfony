{% extends 'base.html.twig' %}

{% block title %}Produtos - {{ product.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="jumbotron">
                    <h1>{{ product.name }}</h1>
                    Código: <strong>{{ product.code }}</strong> <br>
                    Preço: <strong>{{ product.price | number_format(2, ',', '.') }}</strong>
                </div>
            </div>
        </div>
        <a href="{{ path('products.index') }}">Voltar</a>
    </div>
{% endblock %}
