{% extends 'base.html.twig' %}

{% block title %}Produtos - {{ product.name }}{% endblock %}

{% block body %}
    <div class="container">
        <form action="{{ path('products.update', {id: product.id}) }}" method="put">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="name">Nome</label>
                        <input type="text" name="name" id="name" class="form-control" value="{{ product.name }}" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <a href="{{ path('product.index') }}">Cancelar</a>

                    <button type="submit" class="btn btn-primary pull-right">Atualizar</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
