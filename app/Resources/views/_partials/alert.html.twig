{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        <div class="alert alert-{{ type }}">
            {% if message is iterable %}
                <strong>{{ message.title }}</strong><br>
                <p>{{ message.body }}</p>
            {% else %}
                <strong>{{ message }}</strong>
            {% endif %}
        </div>
    {% endfor %}
{% endfor %}